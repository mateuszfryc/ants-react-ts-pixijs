  "homepage": "/",
  "dependencies": {
    "@fontsource/open-sans": "^4.2.2",
    "@koale/useworker": "^4.0.2",
    "mobx": "^6.0.4",
    "mobx-react": "^7.0.5",
    "pixi.js": "^6.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.0.9",
    "react-is": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "request-animation-frame-polyfill": "^1.1.2",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/node": "^14.14.10",
    "@types/pixi.js": "^5.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router": "^5.1.11",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.6",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "commitizen": "^4.0.3",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^28.0.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.0.5",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "pretty-quick": "^3.1.0",
    "react-scripts": "4.0.1",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylint": "^2.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.1.2",
    "worker-loader": "^3.0.8"
  },
  "scripts": {
    "start": "set PORT=3001 && react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "release": "standard-version",
    "lint": "eslint --ext ts,tsx ./src/ && stylelint **/*.styled.{ts,tsx}",
    "lint-single": "eslint --ext ts,tsx",
    "lint:fix": "eslint ./src/ --fix --ext ts --ext tsx",
    "type-check": "tsc"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn type-check"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json}": "pretty-quick --staged",
    "*.{ts,tsx}": [
      "eslint --ext ts,tsx src/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./apps/node_modules/cz-conventional-changelog"
    }
  }
}
